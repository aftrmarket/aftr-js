{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noEmit": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}